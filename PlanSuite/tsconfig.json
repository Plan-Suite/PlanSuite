{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "scripts",
    "outDir": "wwwroot/js",
    "module": "ES2020",
    "target": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "lib": [ "dom", "es2022" ],
    "removeComments": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "**/*",
    "../node_modules",
    "../wwwroot"
  ]
}
