{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "scripts",
    "outDir": "wwwroot/js",
    "module": "es2022",
    "target": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "lib": [ "dom", "es2016", "es2017.object" ],
    "removeComments": true
  },
  "include": [
    "**/*",
    "../node_modules",
    "../wwwroot"
  ]
}
