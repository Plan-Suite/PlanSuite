@using PlanSuite.Controllers.Api
@using System.Web
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model PlanSuite.Models.Temporary.UpgradeSuccessModel
@{
}

<div class="container py-3">
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
        <h1 class="text-center">Thanks for upgrading!</h1>
    </div>

    <div class="mb-3 text-center">
        <p>Your upgrade has been confirmed and processed. You will recieve a receipt (also shown below) via email shortly. You can start using PlanSuite with all the @Model.Sale.PaymentTier features you expect.</p>

        <div style="background-color: #FFF; color: #000; min-height: 1rem; min-width:100%; border: solid black; padding:0.5rem;" class="mb-3 text-start">@Html.Raw(PaymentController.GetPaymentReceiptString(Model.Sale, Model.Amount))</div>

        <a class="btn ps-btn-primary" href="~/Home/Index"><i class="bi bi-arrow-right-circle"></i> Continue to PlanSuite</a>
    </div>
</div>