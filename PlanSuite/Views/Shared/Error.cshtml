@model PlanSuite.Models.Temporary.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-center">Error</h1>
<h2 class="text-center">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <div class="text-center">
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code><br>
            <strong>Error Code:</strong> <code>@Model.ErrorCode</code>
        </p>
    </div>
}