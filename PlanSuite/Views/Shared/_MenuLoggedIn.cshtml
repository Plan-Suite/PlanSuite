        <a class="nav-link text-light @Html.ActiveClass("Journal")" asp-area="" asp-controller="Journal" asp-action="Index">Journal</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light @Html.ActiveClass("Organisation")" asp-area="" asp-controller="Organisation" asp-action="SeeOrganisations">Organisations</a>
    </li>
}
