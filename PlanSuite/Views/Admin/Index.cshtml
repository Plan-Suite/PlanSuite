@model PlanSuite.Models.Temporary.AdminIndexViewModel
@{
    ViewData["Title"] = "Admin Home";

    var now = DateTime.Now;    
    var firstDayCurrentMonth = new DateTime(now.Year, now.Month, 1);
    var lastDayLastMonth = firstDayCurrentMonth.AddDays(-1);
}
<partial name="AdminHeader" />

<div class="container">

    @*User Info*@
    <div class="row mt-2">
        <div class="col-sm-6 col-lg-3">
            <div class="card mb-4 text-white ps-div" style="background-color: #00a896;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-people"></i><br />
                            @Model.UserCount
                            @*<div class="fs-6 fw-normal">(-12.4% <i class="bi bi-arrow-down"></i>)</div>*@
                        </div>
                        <div>Active Users</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card mb-4 text-white ps-div" style="background-color: #0066A8;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-receipt"></i><br />
                            <i class="bi bi-currency-pound"></i>@Model.TotalSalesThisMonth
                            @*<div class="fs-6 fw-normal">(-12.4% <i class="bi bi-arrow-down"></i>)</div>*@
                        </div>
                        <div>This Month</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card mb-4 text-white ps-div" style="background-color: #A89600;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-calendar3"></i><br />
                            <i class="bi bi-currency-pound"></i>@Model.TotalSalesLastMonth
                            @*<div class="fs-6 fw-normal">@lastDayLastMonth.ToString("MMMM")</div>*@
                        </div>
                        <div>Last Month</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card mb-4 text-white ps-div" style="background-color: #a80012;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-bar-chart"></i><br />
                            <i class="bi bi-currency-pound"></i>@Model.TotalSalesThisMonth
                            @*<div class="fs-6 fw-normal">@now.ToString("yyyy")</div>*@
                        </div>
                        <div>This Year</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*System Info*@
    <div class="row mt-2">
        <div class="col-sm-3 col-lg-4">
            <div class="card mb-4 text-white ps-div" style="background-color: #00a896;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-device-hdd" style="font-size:2.5rem;"></i><br />
                            @(Model.TotalSize-Model.FreeSpace) / @Model.TotalSize GB
                        </div>
                        <div>Used Space</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3 col-lg-4">
            <div class="card mb-4 text-white ps-div" style="background-color: #A89600;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-memory" style="font-size:2.5rem;"></i><br />
                            @Model.TotalTasks
                        </div>
                        <div>Total Tasks</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3 col-lg-4">
            <div class="card mb-4 text-white ps-div" style="background-color: #a80012;">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            <i class="bi bi-pc-display-horizontal" style="font-size:2.5rem;"></i><br />
                            @Model.TotalProjects
                        </div>
                        <div>Total Projects</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>