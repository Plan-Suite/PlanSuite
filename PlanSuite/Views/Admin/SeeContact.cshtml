@{
}
@model PlanSuite.Models.Temporary.AdminIndexViewModel
@{
    ViewData["Title"] = "Sale Contact Request";
}
<partial name="AdminHeader" />

<div class="container pt-3">
    <div class="sales-modal">
        <span class="fw-bold">Name: </span> @Model.SalesContact.FirstName @Model.SalesContact.LastName<br />
        <span class="fw-bold">Email: </span> @Model.SalesContact.Email<br />
        <span class="fw-bold">Phone: </span> @Model.SalesContact.PhoneNumber<br />
        <span class="fw-bold">Job Title: </span> @Model.SalesContact.JobTitle<br /><br />
        <span class="fw-bold">Message: </span><br />
        @Model.SalesContact.Message
        <br /><br /><a class="btn ps-btn-success" asp-controller="Admin" asp-action="OnContacted" asp-route-id="@Model.SalesContact.Id" asp-route-confirmed="true">Confirm Request</a>
        <a class="btn ps-btn-danger" asp-controller="Admin" asp-action="OnContacted" asp-route-id="@Model.SalesContact.Id" asp-route-confirmed="false">Delete Request</a>
    </div>
</div>